<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/new_problem"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar2"
        app:layout_constraintStart_toStartOf="@+id/toolbar2"
        app:layout_constraintTop_toTopOf="@+id/toolbar2"
        tools:text="New Problem" />

    <EditText
        android:id="@+id/patient_create_problem_title_input"
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:ems="10"
        android:hint="@string/title"
        android:inputType="textPersonName"
        android:text="@+string/patient_create_problem_title_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar2"
        tools:text="Title:"
        android:maxLength="30"/>

    <EditText
        android:id="@+id/patient_create_problem_date_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="date"
        android:text="@+string/patient_create_problem_date_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/patient_create_problem_title_input"
        tools:text="Date:" />

    <ImageButton
        android:id="@+id/patient_create_problem_calander_button"
        android:layout_width="40dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:background="none"
        android:tint="@color/purple"
        app:layout_constraintStart_toEndOf="@+id/patient_create_problem_date_input"
        app:layout_constraintTop_toBottomOf="@+id/patient_create_problem_title_input"
        app:srcCompat="@android:drawable/ic_menu_my_calendar" />

    <EditText
        android:id="@+id/patient_create_problem_description_input"
        android:layout_width="349dp"
        android:layout_height="82dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="@+string/patient_create_problem_description_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/patient_create_problem_date_input"
        tools:text="Description:" />

    <ImageButton
        android:id="@+id/patient_create_problem_time_button"
        android:layout_width="47dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:background="none"
        android:tint="@color/purple"
        app:layout_constraintStart_toEndOf="@+id/patient_create_problem_calander_button"
        app:layout_constraintTop_toBottomOf="@+id/patient_create_problem_title_input"
        app:srcCompat="@android:drawable/ic_menu_recent_history" />

    <ImageButton
        android:id="@+id/imageButton8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="none"
        android:tint="@color/purple"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/patient_create_problem_description_input"
        app:srcCompat="@android:drawable/ic_popup_reminder" />

    <CheckBox
        android:id="@+id/patient_create_problem_hourly_box"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="@+string/patient_create_problem_time_button"
        app:layout_constraintStart_toEndOf="@+id/imageButton8"
        app:layout_constraintTop_toBottomOf="@+id/patient_create_problem_description_input"
        tools:text="Hourly" />

    <CheckBox
        android:id="@+id/patient_create_problem_daily_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:text="@+string/patient_create_problem_daily_box"
        app:layout_constraintStart_toEndOf="@+id/imageButton8"
        app:layout_constraintTop_toBottomOf="@+id/patient_create_problem_hourly_box"
        tools:text="Daily" />

    <CheckBox
        android:id="@+id/patient_create_problem_weekly_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="@+string/patient_create_problem_weekly_box"
        app:layout_constraintStart_toEndOf="@+id/patient_create_problem_hourly_box"
        app:layout_constraintTop_toBottomOf="@+id/patient_create_problem_description_input"
        tools:text="Weekly" />

    <CheckBox
        android:id="@+id/patient_create_problem_biweekly_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:text="@+string/patient_create_problem_biweekly_box"
        app:layout_constraintStart_toEndOf="@+id/patient_create_problem_hourly_box"
        app:layout_constraintTop_toBottomOf="@+id/patient_create_problem_weekly_box"
        tools:text="Biweekly" />

    <CheckBox
        android:id="@+id/patient_create_problem_monthly_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="@+string/patient_create_problem_monthly_box"
        app:layout_constraintStart_toEndOf="@+id/patient_create_problem_weekly_box"
        app:layout_constraintTop_toBottomOf="@+id/patient_create_problem_description_input"
        tools:text="Monthly" />

    <CheckBox
        android:id="@+id/patient_create_problem_yearly_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:text="@+string/patient_create_problem_yearly_box"
        app:layout_constraintStart_toEndOf="@+id/patient_create_problem_weekly_box"
        app:layout_constraintTop_toBottomOf="@+id/patient_create_problem_monthly_box"
        tools:text="Yearly" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/textview"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/patient_create_problem_daily_box"
        tools:text="Records:" />

    <Button
        android:id="@+id/patient_create_problem_add_record_button"
        android:layout_width="68dp"
        android:layout_height="28dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/blue"
        android:text="@+string/patient_create_problem_add_record_button"
        android:textColor="@color/yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/patient_create_problem_yearly_box"
        tools:text="Add" />

    <ScrollView
        android:id="@+id/patient_create_problem_record_scroll"
        android:layout_width="361dp"
        android:layout_height="81dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <Button
        android:id="@+id/patient_create_problem_save_button"
        android:layout_width="69dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="24dp"
        android:background="@color/yellow"
        android:text="@+string/patient_create_problem_save_button"
        android:textColor="@color/pink"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/patient_create_problem_record_scroll"
        tools:text="Save" />

</android.support.constraint.ConstraintLayout>