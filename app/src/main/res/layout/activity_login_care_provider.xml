<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:text="@string/app_name"
        android:textColor="@color/vaporwave_pink"
        android:textSize="36sp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:textAllCaps="true" />

    <TextView
        android:id="@+id/patient_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="@string/care_provider_login"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/enter_care_provider_username"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/enter_username"
        android:inputType="text"
        android:textColor="@color/dark_grey" />

    <EditText
        android:id="@+id/enter_care_provider_password"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/enter_password"
        android:inputType="textPassword"
        android:textColor="@color/dark_grey" />

    <Button
        android:id="@+id/login_care_provider_button"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:text="@string/log_in"
        android:textSize="18sp" />

    <Button
        android:id="@+id/register_care_provider_button"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="14dp"
        android:text="@string/sign_up"
        android:textSize="14sp"/>

    <Button
        android:id="@+id/log_in_as_patient_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="66dp"
        android:text="@string/log_in_as_patient"
        android:textColor="@android:color/black"/>

</LinearLayout>