<resources>
    <style name="BauditTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorAccent">@color/vaporwave_pink</item>
        <item name="colorButtonNormal">@color/vaporwave_yellow</item>
    </style>

    <style name="BauditPatientTheme" parent="BauditTheme">
        <item name="colorPrimary">@color/vaporwave_blue</item>
        <item name="colorPrimaryDark">@color/vaporwave_purple</item>
        <item name="android:windowBackground">@color/vaporwave_blue</item>
    </style>

    <style name="BauditPatientTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BauditCareProviderTheme" parent="BauditTheme">
        <item name="colorPrimary">@color/vaporwave_purple</item>
        <item name="colorPrimaryDark">@color/vaporwave_blue</item>
        <item name="android:windowBackground">@color/vaporwave_purple</item>
    </style>

    <style name="BauditCareProviderTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--<style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">-->
        <!--<item name="android:windowBackground">@drawable/ic_launcher_foreground</item>-->
        <!--<item name="android:colorBackground">#000000</item>-->
    <!--</style>-->

    <style name="BauditButton">
        <item name="android:textSize">18sp</item>
        <item name="android:shadowColor">#FFFFFF</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="BauditButtonPositive" parent="BauditButton">
        <item name="android:background">@color/vaporwave_yellow</item>
        <item name="android:textColor">@color/vaporwave_pink</item>
    </style>

    <style name="BauditButtonNegative" parent="BauditButton">
        <item name="android:background">@color/vaporwave_pink</item>
        <item name="android:textColor">@color/vaporwave_yellow</item>
    </style>

</resources>
