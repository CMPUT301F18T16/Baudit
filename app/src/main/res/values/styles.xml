<resources>
    <style name="BauditTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/vaporwave_pink</item>
        <item name="colorButtonNormal">@color/vaporwave_yellow</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="BauditPatientTheme" parent="BauditTheme">
        <item name="colorPrimary">@color/vaporwave_blue</item>
        <item name="colorPrimaryDark">@color/vaporwave_purple</item>
        <item name="android:windowBackground">@color/vaporwave_blue</item>
    </style>

    <style name="BauditPatientTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BauditCareProviderTheme" parent="BauditTheme">
        <item name="colorPrimary">@color/vaporwave_purple</item>
        <item name="colorPrimaryDark">@color/vaporwave_blue</item>
        <item name="android:windowBackground">@color/vaporwave_purple</item>
    </style>

    <style name="BauditCareProviderTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
  
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/baudit_logo</item>
    </style>

    <style name="BauditDialogTheme" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="textColorAlertDialogListItem">@color/vaporwave_pink</item>
        <item name="android:dialogTitle">@string/log_out_question</item>
    </style>
</resources>
