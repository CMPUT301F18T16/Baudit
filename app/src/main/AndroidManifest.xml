<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.klapstein.baudit">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <uses-feature
            android:name="android.hardware.camera2"
            android:required="true"/>
    <uses-feature
            android:name="android.hardware.camera2.front"
            android:required="true"/>

    <application
            android:allowBackup="true"
            android:fullBackupContent="true"
            android:icon="@mipmap/ic_launcher_round"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/BauditTheme">
        <uses-library
                android:name="org.apache.http.legacy"
                android:required="false"/>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCWM9XQ4GOnOImKKwDazF3w7BPibuSM8wc" />

        <activity android:name=".activities.CreateCareProviderAccountActivity"/>

        <activity
            android:name=".activities.EditAccountActivity"
            android:theme="@style/BauditPatientTheme.NoActionBar" />

        <activity
            android:name=".activities.CreatePatientAccountActivity"
            android:theme="@style/BauditPatientTheme.NoActionBar"/>

        <activity android:name=".activities.LocationActivity"/>

        <activity
            android:name=".activities.LoginCareProviderActivity"
            android:theme="@style/BauditCareProviderTheme.NoActionBar"/>
        <activity
            android:name=".activities.LoginPatientActivity"
            android:theme="@style/BauditPatientTheme.NoActionBar"/>

        <activity
            android:name=".activities.ProblemActivity"
            android:theme="@style/BauditPatientTheme.NoActionBar" />

        <activity
            android:name=".activities.RecordActivity"
            android:theme="@style/BauditPatientTheme.NoActionBar" />

        <activity android:name=".activities.PatientListActivity"/>
        <activity android:name=".activities.ViewPhotoActivity"/>

        <activity
            android:name=".activities.PatientHomeActivity"
            android:theme="@style/BauditPatientTheme.NoActionBar" />

        <activity
                android:name=".activities.SplashActivity"
                android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activities.CameraActivity">
        </activity>
        <activity android:name=".activities.AddPhotoActivity">
        </activity>

        <activity
            android:name=".activities.MapAllProblemsActivity"
            android:theme="@style/BauditPatientTheme.NoActionBar" />
    </application>

</manifest>