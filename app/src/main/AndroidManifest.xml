<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ca.klapstein.baudit">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <uses-feature
            android:name="android.hardware.camera2"
            android:required="true"/>
    <uses-feature
            android:name="android.hardware.camera2.front"
            android:required="true"/>

    <application
            android:allowBackup="true"
            android:fullBackupContent="true"
            android:icon="@mipmap/ic_launcher_round"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/BauditTheme">
        <activity android:name=".activities.CreateCareProviderAccountActivity"/>
        <activity android:name=".activities.EditAccountActivity"/>
        <activity android:name=".activities.CreatePatientAccountActivity"/>
        <activity android:name=".activities.LocationActivity"/>
        <activity
            android:name=".activities.LoginCareProviderActivity"
            android:theme="@style/BauditCareProviderTheme.NoActionBar"/>
        <activity
            android:name=".activities.LoginPatientActivity"
            android:theme="@style/BauditPatientTheme.NoActionBar"/>
        <activity android:name=".activities.EditProblemActivity"/>
        <activity android:name=".activities.AddProblemActivity"/>
        <activity android:name=".activities.AddRecordActivity"/>
        <activity android:name=".activities.EditRecordActivity"/>
        <activity android:name=".activities.PatientListActivity"/>
        <activity android:name=".activities.ViewPhotoActivity"/>
        <activity
            android:name=".activities.PatientHomeActivity"
            android:theme="@style/BauditPatientTheme.NoActionBar"/>
        <activity android:name=".activities.RecordListActivity"/>
        <activity
                android:name=".activities.SplashActivity"
                android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activities.CameraActivity">
        </activity>
        <activity android:name=".activities.AddPhotoActivity">
        </activity>
    </application>

</manifest>